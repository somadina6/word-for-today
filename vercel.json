{
  "name": "bible-verse-bot",
  "version": 2,
  "builds": [{ "src": "app.js", "use": "@vercel/node" }],
  "crons": [
    {
      "path": "/api/tweet/tweetVOTD",
      "schedule": "0 15 * * *"
    },
    {
      "path": "/api/tweet/tweetVOTDV2",
      "schedule": "0 13 * * *"
    },
    {
      "path": "/api/tweet/tweetRandomVerse",
      "schedule": "0 */2 * * *"
    },
    {
      "path": "/api/tweet/tweetRandomVerseV2",
      "schedule": "0 */2 * * *"
    }
  ]
}
